{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    },
    "types": ["node"],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "src/types/index.d.ts"
  ]
}