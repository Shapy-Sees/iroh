{
  "name": "iroh",
  "version": "1.0.0",
  "description": "A wise AI assistant for your vintage telephone",
  "main": "sec/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "node src/app.ts",
    "dev": "ts-node src/app.ts",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "debug:console": "ts-node src/debug/debug-console.ts",
    "debug": "node -r ts-node/register src/app.ts",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "dotenv": "^10.0.0",
    "winston": "^3.3.3",
    "axios": "^0.24.0",
    "@anthropic-ai/sdk": "^0.16.0",
    "elevenlabs-node": "^1.0.1",
    "spotify-web-api-node": "^5.0.2",
    "rpio": "^2.4.2",
    "@serialport/stream": "^10.4.0",
    "@serialport/parser-readline": "^10.4.0",
    "serialport": "^10.4.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4" 
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@types/jest": "^27.0.2",
    "typescript": "^4.5.2",
    "@types/serialport": "^8.0.2",
    "ts-node": "^10.4.0",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7"
  },
  "config": {
    "unsafe-perm": true
  }
}
